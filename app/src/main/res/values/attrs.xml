<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FixedAspectRatioFrameLayout">
        <attr name="aspectRatioWidth" format="integer" />
        <attr name="aspectRatioHeight" format="integer" />
    </declare-styleable>

    <declare-styleable name="MetalRecyclerViewPager">
        <attr name="itemMargin" format="dimension"/>
    </declare-styleable>
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="PullRefreshLayout">
        <attr name="type" format="enum">
            <enum name="material" value="0" />
            <enum name="circles" value="1" />
            <enum name="water_drop" value="2" />
            <enum name="ring" value="3" />
        </attr>
        <attr name="colors" format="reference" />
    </declare-styleable>
    <declare-styleable name="SwipyRefreshLayout">
        <attr name="direction">
            <enum name="top" value="0" />
            <enum name="bottom" value="1" />
            <enum name="both" value="2" />
        </attr>
    </declare-styleable>
    <declare-styleable name="CircleProgressBar">
        <attr name="mlpb_inner_radius" format="dimension" />
        <attr name="mlpb_background_color" format="color" />
        <attr name="mlpb_progress_color" format="color" />
        <attr name="mlpb_progress_stoke_width" format="dimension" />
        <attr name="mlpb_show_arrow" format="boolean" />
        <attr name="mlpb_enable_circle_background" format="boolean" />
        <attr name="mlpb_arrow_width" format="dimension" />
        <attr name="mlpb_arrow_height" format="dimension" />
        <attr name="mlpb_progress" format="integer" />
        <attr name="mlpb_max" format="integer" />
        <attr name="mlpb_progress_text_size" format="dimension" />
        <attr name="mlpb_progress_text_color" format="color" />

        <!-- <attr name="mlpb_progress_text_offset" format="dimension"/> -->

        <attr name="mlpb_progress_text_visibility" format="enum">
            <enum name="visible" value="0" />
            <enum name="invisible" value="1" />
        </attr>
    </declare-styleable>
    <declare-styleable name="PagerSlidingTabStrip">
        <attr name="pstsIndicatorColor" format="color" />
        <attr name="pstsUnderlineColor" format="color" />
        <attr name="pstsDividerColor" format="color" />
        <attr name="pstsIndicatorHeight" format="dimension" />
        <attr name="pstsUnderlineHeight" format="dimension" />
        <attr name="pstsDividerPadding" format="dimension" />
        <attr name="pstsTabPaddingLeftRight" format="dimension" />
        <attr name="pstsScrollOffset" format="dimension" />
        <attr name="pstsTabBackground" format="reference" />
        <attr name="pstsShouldExpand" format="boolean" />
        <attr name="pstsTextAllCaps" format="boolean" />
    </declare-styleable>
    <!-- Default style for the Switch widget. -->

    <declare-styleable name="ExpansionHeader">
        <attr name="expansion_layout" format="reference"/>
        <attr name="expansion_toggleOnClick" format="boolean"/>
        <attr name="expansion_headerIndicator" format="reference"/>
        <attr name="expansion_headerIndicatorRotationExpanded" format="integer"/>
        <attr name="expansion_headerIndicatorRotationCollapsed" format="integer"/>
    </declare-styleable>

    <declare-styleable name="ExpansionLayout">
        <attr name="expansion_expanded" format="boolean"/>
    </declare-styleable>

    <attr name="expansion_openOnlyOne" format="boolean"/>

    <declare-styleable name="ExpansionsViewGroupFrameLayout">
        <attr name="expansion_openOnlyOne"/>
    </declare-styleable>
    <declare-styleable name="ExpansionsViewGroupLinearLayout">
        <attr name="expansion_openOnlyOne"/>
    </declare-styleable>
    <declare-styleable name="ExpansionsViewGroupRelativeLayout">
        <attr name="expansion_openOnlyOne"/>
    </declare-styleable>
    <declare-styleable name="ExpansionsViewGroupConstraintLayout">
        <attr name="expansion_openOnlyOne"/>
    </declare-styleable>

</resources>