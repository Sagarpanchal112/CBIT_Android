<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5"
        android:background="@drawable/yellow_gradiant"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTDS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/bg_grdient_red"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="@dimen/margin_5"
            android:paddingTop="3dp"
            android:paddingEnd="@dimen/margin_5"
            android:paddingBottom="3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            tools:text="TDS: 10000" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:layout_marginBottom="@dimen/margin_5"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivArrow"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_marginStart="@dimen/margin_5"
                    android:contentDescription="@null"
                    android:src="@drawable/round_arrow" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvTransactionTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/margin_5"
                            android:paddingTop="2dp"

                            android:paddingEnd="@dimen/margin_5"
                            android:paddingBottom="2dp"
                            android:textColor="@color/color_green_dark"
                            android:textSize="@dimen/_13sdp"
                            tools:text="Paid for contest name" />

                        <TextView
                            android:id="@+id/tvAmount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:background="@color/color_green_dark"
                            android:fontFamily="@font/montserrat_medium"
                            android:paddingStart="@dimen/padding_20"
                            android:paddingTop="@dimen/margin_5"
                            android:paddingEnd="@dimen/padding_20"
                            android:paddingBottom="@dimen/margin_5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            tools:text="+000" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/margin_5">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/date"
                                android:textColor="@color/color_green_dark"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvTransactionDate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/color_green_dark"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="MissingPrefix"
                                tools:text="02-07-2019" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/montserrat_medium"
                                android:text="@string/time"
                                android:textColor="@color/color_green_dark"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/tvTransactionTime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/margin_10"
                                android:fontFamily="@font/montserrat_medium"
                                android:textColor="@color/color_green_dark"
                                android:textSize="@dimen/_12sdp"
                                tools:ignore="MissingPrefix"
                                tools:text="03:54 PM" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="end"
                            android:paddingStart="@dimen/margin_5"
                            android:paddingTop="2dp"
                            android:paddingEnd="@dimen/margin_5"
                            android:paddingBottom="2dp"
                            android:text="Updated Balance : "
                            android:textColor="@color/color_green_dark"
                            android:textSize="@dimen/_11sdp" />

                        <TextView
                            android:id="@+id/tvbeforebalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end"
                            android:layout_marginEnd="@dimen/margin_10"
                            android:background="@drawable/bg_grdient_yellow"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:paddingStart="@dimen/padding_20"
                            android:paddingTop="@dimen/margin_5"
                            android:paddingEnd="@dimen/padding_20"
                            android:paddingBottom="@dimen/margin_5"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_12sdp"
                            tools:text="+000" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_approved"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"
                android:orientation="vertical"
                android:visibility="gone">

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:src="@drawable/icon_approved" />

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/icon_right_green" />
            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>