<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".fragments.PackagesTabFragment">
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:elevation="0dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/color_green_dark"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            app:contentInsetEnd="0dp"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:contentDescription="@null"
                    android:padding="@dimen/padding_16"
                    android:src="@drawable/ic_arrow"
                    android:tint="@color/white" />


                <TextView
                    android:id="@+id/toolbar_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toEndOf="@+id/ivBack"
                    android:fontFamily="@font/montserrat_semibold"
                    android:lines="1"
                    android:maxLines="1"
                    android:singleLine="true"
                    android:text="@string/Myjtckt"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:ignore="MissingPrefix" />


            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:id="@+id/linDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingTop="@dimen/_10sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_light_blue_rounded"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Average Play Per Day(APD) "
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tvAPDValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    tools:text="365 " />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_light_blue_rounded"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Todayâ€™s Apply Potential (TAP)"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tvTAPValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    tools:text="CC - 365 " />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_light_blue_rounded"
                android:orientation="vertical"
                android:padding= "@dimen/_5sdp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:text="Balance Apply Potential (BAP)"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_8sdp" />

                <TextView
                    android:id="@+id/tvBAPValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sdp"
                    tools:text="CC - 365 " />
            </LinearLayout>

            <TextView
                android:id="@+id/DayOfJoin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:fontFamily="@font/montserrat_medium"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/bg_light_blue_rounded"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"/>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/btnApplyDaily"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/btn_login_new"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Apply Daily Quota"
        android:textColor="@color/color_green_dark"
        android:textSize="@dimen/_12sdp"
        android:visibility="gone"
        tools:ignore="MissingPrefix" />

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/dashboardTabLayout"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:tabIndicatorColor="@color/color_login_btn"
        app:tabIndicatorHeight="2dp"
        app:tabMode="fixed"
        android:backgroundTint="@color/colorPrimary"
        app:tabSelectedTextColor="@color/white"
        app:tabTextAppearance="@style/TabTextAppearance"
        app:tabTextColor="@color/text_hint" />

    <androidx.viewpager.widget.ViewPager
        android:id="@+id/dashboardViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_10" />


</LinearLayout>