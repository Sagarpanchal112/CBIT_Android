<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    android:background="@android:color/transparent">

    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        tools:text="Date: 15-06-2019"
        android:textSize="@dimen/fontsize_16"
        android:visibility="gone"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/color_green_dark"
        android:gravity="center_vertical"
        android:layout_marginStart="@dimen/margin_10"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_10">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_gradient_drawable"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:layout_marginTop="@dimen/margin_10">
                <ImageView
                    android:id="@+id/ivGameLevel"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    tools:src="@drawable/ic_easy"
                    android:contentDescription="@null"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10">
                    <TextView
                        android:id="@+id/tvContestName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        tools:text="Royal Casino"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/montserrat_semibold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:layout_centerInParent="true"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/color_b2b2b2"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.9"
                    android:layout_marginStart="@dimen/margin_10">
                    <Button
                        android:id="@+id/btnPayNow"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:background="@drawable/btn_join_contest"
                        android:text="Join Contests"
                        android:fontFamily="@font/montserrat_semibold"
                        android:textColor="@color/color_yellow"
                        android:textSize="@dimen/_10sdp"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="@dimen/_5sdp"
                        android:foreground="?attr/selectableItemBackground"
                        tools:ignore="MissingPrefix"/>
                </RelativeLayout>

                <ImageView
                    android:id="@+id/ivGameType"
                    android:layout_width="@dimen/height_60"
                    android:layout_height="@dimen/height_50"
                    tools:src="@drawable/fix"
                    android:visibility="gone"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"/>
            </LinearLayout>

           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:layout_marginBottom="@dimen/_6sdp"
               android:layout_marginTop="@dimen/_6sdp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:text="@string/contesttime"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        android:fontFamily="@font/montserrat_light"
                        tools:ignore="MissingPrefix" />
                    <TextView
                        android:id="@+id/tvGameTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="09 : 00 PM"
                        android:textSize="@dimen/_11sdp"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/margin_5"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingBottom="@dimen/margin_5"
                        android:paddingStart="@dimen/padding_10"
                        android:paddingEnd="@dimen/padding_10"
                        tools:ignore="MissingPrefix" />
                </LinearLayout>
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/color_b2b2b2"/>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:gravity="center">
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/timeremaining"
                       android:textSize="@dimen/_10sdp"
                       android:textColor="@color/white"
                       android:ellipsize="end"
                       android:fontFamily="@font/montserrat_light"
                        tools:ignore="MissingPrefix"/>
                   <TextView
                       android:id="@+id/tvRemainigTime"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="05 : 00 : 29"
                       android:textSize="@dimen/_11sdp"
                       android:textColor="@color/white"
                       android:paddingTop="@dimen/margin_5"
                       android:paddingBottom="@dimen/margin_5"
                       android:fontFamily="@font/montserrat_medium"
                       android:paddingStart="@dimen/padding_10"
                       android:paddingEnd="@dimen/padding_10"
                         tools:ignore="MissingPrefix" />
               </LinearLayout>
               <View
                   android:layout_width="1dp"
                   android:layout_height="match_parent"
                   android:background="@color/color_b2b2b2"/>
               <LinearLayout
                   android:layout_width="0dp"
                   android:layout_height="wrap_content"
                   android:layout_weight="1"
                   android:orientation="vertical"
                   android:gravity="center">

                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="@string/entryclosingin"
                       android:textColor="@color/white"
                       android:textSize="@dimen/_10sdp"
                       android:fontFamily="@font/montserrat_light"
                       tools:ignore="MissingPrefix"/>
                   <TextView
                       android:id="@+id/tvEntryClosingTime"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       tools:text="05 : 00 : 29"
                       android:textSize="@dimen/_11sdp"
                       android:textColor="@color/color_yellow"
                       android:paddingTop="@dimen/margin_5"
                       android:paddingBottom="@dimen/margin_5"
                       android:paddingStart="@dimen/padding_10"
                       android:fontFamily="@font/montserrat_medium"
                       android:paddingEnd="@dimen/padding_10"
                        tools:ignore="MissingPrefix" />
               </LinearLayout>
           </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>