<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.JoinByCodeFragment"
    android:background="@color/white"
    android:padding="@dimen/padding_10">


    <EditText
        android:id="@+id/edtJoinByCode"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/color_424242"
        android:textSize="@dimen/fontsize_18"
        android:textColorHint="@color/color_424242"
        android:hint="@string/enterjoincode"
        android:padding="@dimen/padding_10"
        android:inputType="text"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:layout_marginTop="@dimen/margin_10"/>

    <Button
        android:id="@+id/btnJoin"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"
        android:background="@drawable/btn_login_new"
        android:text="@string/join"
        android:textColor="@color/white"
        android:textSize="@dimen/fontsize_20"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>