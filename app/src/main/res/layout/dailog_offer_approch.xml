<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img_close"
            android:layout_width="@dimen/_36sdp"
            android:layout_height="@dimen/_36sdp"
            android:layout_alignParentRight="true"
            android:padding="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:src="@drawable/icon_close"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5sdp"
        app:cardElevation="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_3sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_noofredeem"
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                     android:gravity="center_vertical"
                    android:padding="@dimen/_3sdp"
                    android:fontFamily="@font/montserrat_semibold"

                    android:text="Offer % "
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/btnDone"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_25sdp"
                    android:background="@drawable/btn_green"
                    android:clickable="true"
                    android:focusable="true"
                    android:visibility="gone"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="Deal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_12" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="Negotiate"
                    android:textColor="@color/black"
                    android:visibility="gone"
                    android:textSize="@dimen/_12sdp"
                    tools:ignore="MissingPrefix" />

                <EditText
                    android:id="@+id/edtOffer"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_marginStart="@dimen/_30sdp"
                    android:background="@drawable/edittext_square"
                    android:digits="1234567890"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:hint="approach"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="@color/color_424242"
                    android:textColorHint="@color/color_a0a0a0"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                     android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="%"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancel"
                   android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_colorprimary_radius_left_side"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="Cancel"
                    android:textColor="@color/white"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/btnApproach"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_yellow_radius_right_side"
                    android:clickable="true"
                    android:focusable="true"
                    android:text="Approach"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/color_green_dark"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>