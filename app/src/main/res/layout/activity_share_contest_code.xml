<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ShareContestCodeActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/height_200"
            android:layout_height="@dimen/height_200"
            android:src="@drawable/ic_validatioin"
            android:contentDescription="@null"/>

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Contest Hosted Successfully"
        android:textSize="@dimen/fontsize_20"
        android:textColor="@color/color_26b34b"
        android:padding="@dimen/padding_10"
            android:fontFamily="@font/montserrat_medium"
            android:layout_marginTop="@dimen/margin_10"/>

        <TextView
            android:id="@+id/tvShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contest Code: XXXXXX"
            android:textSize="@dimen/fontsize_18"
            android:fontFamily="@font/montserrat_medium"
            android:textColor="@color/color_424242"
            android:padding="@dimen/padding_10"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/color_yellow"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_10"
            android:src="@drawable/ic_share_2"
            android:foreground="?attr/selectableItemBackground" />
    </LinearLayout>


    <Button
        android:id="@+id/btnContest"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:text="@string/mycontest"
        android:textColor="@color/color_green_dark"
        android:background="@drawable/btn_login_new"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="@dimen/padding_20"
        android:textSize="@dimen/fontsize_20"
        android:fontFamily="@font/montserrat_semibold"
        android:layout_marginEnd="@dimen/padding_20"
        android:layout_marginBottom="@dimen/margin_20"/>
</RelativeLayout>