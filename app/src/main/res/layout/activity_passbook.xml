<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PassbookActivity"
    android:background="@color/white">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_green_dark"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:src="@drawable/ic_arrow"
                android:padding="@dimen/padding_10"
                android:clickable="true"
                android:tint="@color/white"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_centerVertical="true"/>

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_toEndOf="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:fontFamily="@font/montserrat_semibold"
                android:text="@string/passbook"
                android:textColor="@color/white"
                android:textSize="20sp"
               tools:ignore="MissingPrefix"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10">
            <LinearLayout
                android:id="@+id/lin_unutilizeblc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_424242"
                    android:text="@string/unutilizedbal"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/fontsize_14"
                    android:padding="@dimen/margin_5"/>
                <TextView
                    android:id="@+id/tvBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_424242"
                    tools:text="5000"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/fontsize_18"
                    android:padding="@dimen/margin_5"
                    tools:ignore="MissingPrefix"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_CCAmt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="gone"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:textColor="@color/color_424242"
                    android:text="Credentia Currency Balance"
                    android:textSize="@dimen/fontsize_14"
                    android:padding="@dimen/margin_5"/>
                <TextView
                    android:id="@+id/tvCCBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_424242"
                    tools:text="CC 000"
                    android:textSize="@dimen/fontsize_18"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="@dimen/margin_5"
                    tools:ignore="MissingPrefix"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_winblc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_424242"
                    android:text="@string/withdrawablebal"
                    android:fontFamily="@font/montserrat_medium"
                    android:textSize="@dimen/fontsize_14"
                    android:padding="@dimen/margin_5"/>
                <TextView
                    android:id="@+id/tvWinningBalance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_424242"
                    tools:text="500"
                    android:textSize="@dimen/fontsize_18"
                    android:fontFamily="@font/montserrat_medium"
                    android:padding="@dimen/margin_5"
                    tools:ignore="MissingPrefix"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:visibility="gone">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/totalbalance"
                android:textSize="@dimen/fontsize_14"
                android:padding="@dimen/margin_5"/>
            <TextView
                android:id="@+id/tvTotalBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:fontFamily="@font/montserrat_medium"
                tools:text="500"
                android:textSize="@dimen/fontsize_16"
                android:padding="@dimen/margin_5"/>
        </LinearLayout>

        <com.malinskiy.superrecyclerview.SuperRecyclerView
            android:id="@+id/rvPassbookList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
            app:recyclerClipToPadding="false"
            app:recyclerPaddingBottom="@dimen/padding_10"
            app:scrollbarStyle="insideInset"
            app:layout_empty="@layout/layout_no_data_passbook"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/imgFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="?selectableItemBackgroundBorderless"
        android:src="@drawable/filter" />
</RelativeLayout>