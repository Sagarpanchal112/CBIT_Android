<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_10"
    android:background="@drawable/bg_a0a0a0_stock_1"
    android:padding="@dimen/margin_5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Entry Fees"
                    android:textColor="@color/color_424242"
                    android:textSize="@dimen/_10sdp" />

                <TextView
                    android:id="@+id/tvEntryFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:text="₹ 1000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:text="Players"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:text="500"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Winnings"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalWinnings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:fontFamily="@font/montserrat_medium"
                    android:gravity="center"
                    android:maxLines="1"
                    android:text="₹ 2000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Max winners"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvMaxWinners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="3000"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/frameContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/rvOprions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:layout_marginRight="@dimen/_8sdp"
                android:background="@color/color_bg"
                android:orientation="horizontal">


                <RadioGroup
                    android:id="@+id/rd_rdb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:scrollbars="horizontal">

                    <RadioButton
                        android:id="@+id/rd_red"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/price_group_sel_red"
                        android:button="@android:color/transparent"
                        android:clickable="false"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:padding="@dimen/_5sdp"
                        android:text="Red Win"
                        android:textColor="@drawable/text_group_sel" />

                    <RadioButton
                        android:id="@+id/rd_draw"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:background="@drawable/price_group_sel"
                        android:button="@android:color/transparent"
                        android:clickable="false"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:minWidth="@dimen/_55sdp"
                        android:padding="@dimen/_5sdp"
                        android:text="Draw"
                        android:textColor="@color/white" />

                    <RadioButton
                        android:id="@+id/rd_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_25sdp"
                        android:background="@drawable/price_group_sel_blue"
                        android:button="@android:color/transparent"
                        android:clickable="false"
                        android:layout_weight="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"
                        android:text="Blue Win"
                        android:textColor="@drawable/text_group_sel" />

                </RadioGroup>
                <!-- <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/_5sdp"
                     android:layout_weight="1"
                     android:background="@drawable/bg_yellow_radius"
                     android:gravity="center"
                     android:maxLines="1"
                     android:padding="@dimen/_5sdp"
                     android:text="Red More"
                     android:textColor="@color/colorPrimary"
                     android:textSize="@dimen/_9sdp" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/_5sdp"
                     android:layout_weight="1"
                     android:background="@drawable/bg_yellow_radius"
                     android:gravity="center"
                     android:maxLines="1"
                     android:padding="@dimen/_5sdp"
                     android:text="Draw"
                     android:textColor="@color/colorPrimary"
                     android:textSize="@dimen/_9sdp" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/_5sdp"
                     android:layout_weight="1"
                     android:background="@drawable/bg_yellow_radius"
                     android:gravity="center"
                     android:maxLines="1"
                     android:padding="@dimen/_5sdp"
                     android:text="Blue More"
                     android:textColor="@color/colorPrimary"
                     android:textSize="@dimen/_9sdp" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3Options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tvMinus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_radius"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_10"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingEnd="@dimen/padding_10"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="-"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontsize_14" />

                <TextView
                    android:id="@+id/tvZero"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_radius"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:paddingStart="@dimen/padding_10"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingEnd="@dimen/padding_10"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="0"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontsize_14" />

                <TextView
                    android:id="@+id/tvPlus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_marginStart="@dimen/margin_5"
                    android:layout_weight="1"
                    android:background="@drawable/bg_yellow_radius"
                    android:gravity="center"
                    android:paddingStart="@dimen/padding_10"
                    android:paddingTop="@dimen/margin_5"
                    android:paddingEnd="@dimen/padding_10"
                    android:paddingBottom="@dimen/margin_5"
                    android:text="+"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontsize_14" />
            </LinearLayout>
        </RelativeLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <!--<LinearLayout
            android:id="@+id/linearNotSelection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:visibility="visible">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontsize_10"
                android:text="@string/yourselection"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Empty"
                android:textSize="@dimen/fontsize_12"
                android:background="@drawable/bg_yellow_radius"
                android:paddingStart="@dimen/padding_10"
                android:paddingEnd="@dimen/padding_10"
                android:paddingTop="@dimen/margin_5"
                android:paddingBottom="@dimen/margin_5"
                android:layout_marginTop="@dimen/margin_5"
                android:gravity="center"/>
        </LinearLayout>-->

        <LinearLayout
            android:id="@+id/linearSelection"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:text="@string/yourselection"
                android:textColor="@color/color_424242"
                android:textSize="@dimen/_11sdp" />

            <TextView
                android:id="@+id/tvAnsSelection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:background="@drawable/bg_yellow_radius"
                android:gravity="center"
                android:fontFamily="@font/montserrat_medium"
                android:paddingStart="@dimen/padding_10"
                android:paddingTop="@dimen/margin_5"
                android:paddingEnd="@dimen/padding_10"
                android:paddingBottom="@dimen/margin_5"
                android:text="Empty"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/tvLockNow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/bg_colorprimary"
                android:gravity="center"
                android:paddingStart="@dimen/padding_10"
                android:paddingTop="@dimen/margin_5"
                android:paddingEnd="@dimen/padding_10"
                android:paddingBottom="@dimen/margin_5"
                android:text="@string/locknow"
                android:textColor="@color/white"
                android:textSize="@dimen/_12sdp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearLock"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_10"
                android:src="@drawable/padlock" />

            <TextView
                android:id="@+id/tvSelectedAns"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_5"
                android:fontFamily="@font/montserrat_medium"
                android:background="@drawable/bg_yellow_radius"
                android:gravity="center"
                android:paddingStart="@dimen/padding_10"
                android:paddingTop="@dimen/margin_5"
                android:paddingEnd="@dimen/padding_10"
                android:paddingBottom="@dimen/margin_5"
                android:textColor="@color/white"
                android:textSize="@dimen/fontsize_12"
                tools:text="0" />

            <TextView
                android:id="@+id/tvLockTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_medium"
                android:layout_marginTop="@dimen/margin_5"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontsize_8"
                tools:text="Locked at: 12:29:55s" />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>