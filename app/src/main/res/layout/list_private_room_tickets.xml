<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="5dp"
    android:background="@color/color_yellow">

    <LinearLayout
        android:id="@+id/linHeader"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/bg_white_rounded"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_8sdp"
            android:src="@drawable/teamwork" />


        <TextView
            android:id="@+id/tvGroupName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Group : Happy Family Group"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontsize_16"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_join_contest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_blue_rounded"
            android:fontFamily="@font/montserrat_semibold"
            android:gravity="center"
            android:minHeight="@dimen/_35sdp"
            android:paddingStart="@dimen/_20sdp"
            android:paddingEnd="@dimen/_20sdp"
            android:text="Join\nContest"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_70sdp"
        android:layout_below="@+id/linHeader"
        android:background="@drawable/bg_white_rounded"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_game_type"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/roulette_wheel" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_group_ticket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Group : Roulette (896 Tickets Sold)"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontsize_16" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_lock_style"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:text="Lock Style : Basic"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/fontsize_16" />

                <ImageView
                    android:id="@+id/img_lock_style"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_gravity="right"
                    android:padding="@dimen/_10sdp"
                    android:src="@drawable/roulette_wheel" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_48sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:src="@drawable/black_dot_line" />
</RelativeLayout>