<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.AddMoneyActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_green_dark"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="@dimen/padding_10"
                android:src="@drawable/ic_arrow"
                android:tint="@color/white" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_toEndOf="@+id/ivBack"
                android:fontFamily="@font/montserrat_semibold"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/addmoney"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_10"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:padding="@dimen/margin_5"
                        android:text="@string/unutilizedbal"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:id="@+id/tvBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_15sdp"
                        tools:ignore="MissingPrefix"
                        tools:text="5000" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:padding="@dimen/margin_5"
                        android:text="@string/withdrawablebal"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_13sdp" />

                    <TextView
                        android:id="@+id/tvWinningBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_bold"
                        android:padding="@dimen/margin_5"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_15sdp"
                        tools:ignore="MissingPrefix"
                        tools:text="500" />
                </LinearLayout>
            </LinearLayout>

            <EditText
                android:id="@+id/edtAmount"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@drawable/edittext_line"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:hint="@string/enteramount"

                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLines="1"
                android:padding="@dimen/padding_10"
                android:textColor="@color/color_424242"
                android:textColorHint="@color/color_a0a0a0"
                android:textSize="@dimen/_14sdp" />

            <!-- <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="@color/color_191919"
                 android:text="@string/selectoption"
                 android:textSize="@dimen/fontsize_20"
                 android:padding="@dimen/padding_10"/>

             <RadioGroup
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:orientation="vertical">
                 <android.support.v7.widget.AppCompatRadioButton
                     android:layout_width="wrap_content"
                     android:layout_height="?attr/listPreferredItemHeightSmall"
                     android:text="Paytm"
                     android:textSize="@dimen/fontsize_16"
                     android:textColor="@color/color_191919"
                     android:padding="@dimen/padding_10"
                     app:buttonTint="@color/colorPrimary"/>
                 <android.support.v7.widget.AppCompatRadioButton
                     android:layout_width="wrap_content"
                     android:layout_height="?attr/listPreferredItemHeightSmall"
                     android:text="Tez"
                     android:textSize="@dimen/fontsize_16"
                     android:textColor="@color/color_191919"
                     android:padding="@dimen/padding_10"
                     app:buttonTint="@color/colorPrimary"/>
                 <android.support.v7.widget.AppCompatRadioButton
                     android:layout_width="wrap_content"
                     android:layout_height="?attr/listPreferredItemHeightSmall"
                     android:text="Debit Card"
                     android:textSize="@dimen/fontsize_16"
                     android:textColor="@color/color_191919"
                     android:padding="@dimen/padding_10"
                     app:buttonTint="@color/colorPrimary"/>
                 <android.support.v7.widget.AppCompatRadioButton
                     android:layout_width="wrap_content"
                     android:layout_height="?attr/listPreferredItemHeightSmall"
                     android:text="Net Banking"
                     android:textSize="@dimen/fontsize_16"
                     android:textColor="@color/color_191919"
                     android:padding="@dimen/padding_10"
                     app:buttonTint="@color/colorPrimary"/>
                 <android.support.v7.widget.AppCompatRadioButton
                     android:layout_width="wrap_content"
                     android:layout_height="?attr/listPreferredItemHeightSmall"
                     android:text="BHIM UPI"
                     android:textSize="@dimen/fontsize_16"
                     android:textColor="@color/color_191919"
                     android:padding="@dimen/padding_10"
                     app:buttonTint="@color/colorPrimary"/>
             </RadioGroup>

             <EditText
                 android:layout_width="match_parent"
                 android:layout_height="?attr/actionBarSize"
                 android:textColor="@color/black"
                 android:textSize="@dimen/fontsize_16"
                 android:hint="@string/enterupivpa"
                 android:textColorHint="@color/color_a0a0a0"
                 android:padding="@dimen/padding_10"
                 android:inputType="text"
                 android:imeOptions="actionDone"
                 android:maxLines="1"
                 android:background="@drawable/edittext_line"/>-->

            <Button
                android:id="@+id/btnAddMoney"
                android:layout_width="match_parent"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@drawable/btn_login_new"
                android:clickable="false"
                android:enabled="false"
                android:alpha="0.5"
                android:focusable="true"
                android:fontFamily="@font/montserrat_semibold"
                android:foreground="?attr/selectableItemBackground"
                android:text="@string/addmoney"

                android:textColor="@color/color_green_dark"
                android:textSize="@dimen/_14sdp" />
        </LinearLayout>
    </ScrollView>


</RelativeLayout>