<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activities.AboutUsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/color_yellow"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="@dimen/activity_horizontal_margin"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/toolbar_title"
                android:fontFamily="@font/montserrat_semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivBack"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Classic Grids"
                android:textColor="@color/color_424242"
                android:textSize="20sp"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_20sdp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvRemainingText"
            android:layout_width="wrap_content"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/margin_10"
            android:background="@drawable/bg_rounded_colorprimary"
            android:gravity="center"
            android:minWidth="@dimen/height_120"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:text="Game Starts In 00:00:10"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_toRightOf="@+id/tvRemainingText"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_edit"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentRight="true"
                android:src="@drawable/pause" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="1"
                android:text="Pause"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_10sdp" />
        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvBricks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_5"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5" />

    <!-- Contest RDB View Display-->
    <LinearLayout
        android:id="@+id/lin_rdb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:orientation="vertical"
        tools:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <LinearLayout
                android:id="@+id/rvOprions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:layout_marginBottom="@dimen/margin_10"
                android:background="@color/color_bg"
                android:orientation="horizontal">


                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioGroup
                        android:id="@+id/rd_rdb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp"
                        android:scrollbars="horizontal">

                        <RadioButton
                            android:id="@+id/rd_red"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/price_group_sel_red"
                            android:button="@android:color/transparent"
                            android:clickable="false"
                            android:padding="@dimen/_5sdp"
                            android:text="Red Win"
                            android:textColor="@drawable/text_group_sel" />

                        <RadioButton
                            android:id="@+id/rd_draw"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/price_group_sel"
                            android:button="@android:color/transparent"
                            android:clickable="false"
                            android:gravity="center"
                            android:minWidth="@dimen/_55sdp"
                            android:padding="@dimen/_5sdp"
                            android:text="Draw"
                            android:textColor="@color/white" />

                        <RadioButton
                            android:id="@+id/rd_blue"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_25sdp"
                            android:background="@drawable/price_group_sel_blue"
                            android:button="@android:color/transparent"
                            android:clickable="false"
                            android:gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:text="Blue Win"
                            android:textColor="@drawable/text_group_sel" />

                    </RadioGroup>
                </HorizontalScrollView>
                <!-- <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/_5sdp"
                     android:layout_weight="1"
                     android:background="@drawable/bg_yellow_radius"
                     android:gravity="center"
                     android:maxLines="1"
                     android:padding="@dimen/_5sdp"
                     android:text="Red More"
                     android:textColor="@color/colorPrimary"
                     android:textSize="@dimen/_9sdp" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/_5sdp"
                     android:layout_weight="1"
                     android:background="@drawable/bg_yellow_radius"
                     android:gravity="center"
                     android:maxLines="1"
                     android:padding="@dimen/_5sdp"
                     android:text="Draw"
                     android:textColor="@color/colorPrimary"
                     android:textSize="@dimen/_9sdp" />

                 <TextView
                     android:layout_width="0dp"
                     android:layout_height="wrap_content"
                     android:layout_gravity="center"
                     android:layout_margin="@dimen/_5sdp"
                     android:layout_weight="1"
                     android:background="@drawable/bg_yellow_radius"
                     android:gravity="center"
                     android:maxLines="1"
                     android:padding="@dimen/_5sdp"
                     android:text="Blue More"
                     android:textColor="@color/colorPrimary"
                     android:textSize="@dimen/_9sdp" />-->
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearSelection"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/yourselection"
                    android:textColor="@color/color_424242"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/tvAnsSelection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:background="@drawable/bg_yellow_radius"
                    android:gravity="center"
                    android:padding="@dimen/_5sdp"
                    android:text="EMPTY"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp" />


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_nine_LockNow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_5sdp"
            android:background="@drawable/bg_colorprimary"
            android:gravity="center"
            android:minHeight="@dimen/_30sdp"
            android:text="LOCK NOW"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp" />

        <!--            <TextView
                        android:id="@+id/tv_rdb_LockNow"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/bg_colorprimary"
                        android:gravity="center"
                        android:minHeight="@dimen/_30sdp"
                        android:text="LOCK ALL"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvTickets"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_10" />
    </LinearLayout>

</LinearLayout>