<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_170sdp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvStartDate"
        android:layout_width="match_parent"
        android:layout_height="?attr/listPreferredItemHeightSmall"
        android:layout_marginStart="@dimen/margin_10"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="center_vertical"
        android:textColor="@color/color_green_dark"
        android:textSize="@dimen/fontsize_16"
        tools:text="Date: 15-06-2019" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_10"
        android:layout_marginEnd="@dimen/margin_5"
        android:layout_marginBottom="@dimen/margin_10"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_gradient_drawable"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="bottom"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivGameLevel"
                    android:layout_width="@dimen/_24sdp"
                    android:layout_height="@dimen/_24sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:contentDescription="@null"
                    tools:src="@drawable/ic_easy" />

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/margin_10"
                    android:layout_marginEnd="@dimen/margin_10"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/tvContestName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="13dp"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_semibold"
                        android:maxLines="2"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontsize_18"
                        tools:text="Royal Casino" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/color_b2b2b2" />
                </RelativeLayout>

                <ImageView
                    android:id="@+id/ivGameType"
                    android:layout_width="@dimen/height_60"
                    android:layout_height="@dimen/height_50"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    tools:src="@drawable/fix"
                    tools:visibility="visible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLines="1"
                        android:text="@string/contesttime"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvGameTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingStart="@dimen/padding_10"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/padding_10"
                        android:paddingBottom="@dimen/margin_5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="MissingPrefix"
                        tools:text="09 : 00 PM" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b2b2b2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_regular"
                        android:maxLines="1"
                        android:text="@string/timeremaining"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvRemainigTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingStart="@dimen/padding_10"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/padding_10"
                        android:paddingBottom="@dimen/margin_5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="MissingPrefix"
                        tools:text="05 : 00 : 29" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_b2b2b2" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_regular"
                        android:text="@string/entryclosingin"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="MissingPrefix" />

                    <TextView
                        android:id="@+id/tvEntryClosingTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:paddingStart="@dimen/padding_10"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/padding_10"
                        android:paddingBottom="@dimen/margin_5"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_10sdp"
                        tools:ignore="MissingPrefix"
                        tools:text="05 : 00 : 29" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_10"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnMyTickets"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_colorprimary_radius_left_side"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="JOINED CONTESTS"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="MissingPrefix" />

                <Button
                    android:id="@+id/btnEnter"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_weight="1"
                    android:background="@drawable/btn_light_green"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:text="@string/enter"
                    android:textColor="@color/color_green_dark"
                    android:textSize="@dimen/_10sdp"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>