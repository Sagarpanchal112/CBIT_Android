<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lin_rdb"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_5"
    android:background="@color/darkblue"
    android:orientation="horizontal"
    android:padding="@dimen/margin_5">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:minHeight="@dimen/_30sdp"
        android:background="@drawable/new_tv_spcl_contest"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Entry Fees"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_9sdp" />

                <TextView
                    android:id="@+id/tvEntryFees"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:text="₹ 5.00"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Players"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalTicket"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="1053813"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Winnings"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tvTotalWinnings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="₹ 42,15,252"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="Winners"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvMaxWinners"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/montserrat_medium"
                    android:maxLines="1"
                    android:text="4,21,525"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_10sdp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvOprions"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_70sdp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3" />


        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearSelection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_5sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_medium"
            android:text="@string/yourselection"
            android:textColor="@color/color_424242"
            android:textSize="@dimen/_9sdp" />


        <TextView
            android:id="@+id/tvAnsSelection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/montserrat_medium"
            android:background="@drawable/bg_yellow_radius"
            android:gravity="center"
            android:paddingStart="@dimen/padding_10"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/margin_5"
            android:text="EMPTY"
            android:textSize="@dimen/fontsize_10" />

        <TextView
            android:id="@+id/tvLockNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/bg_colorprimary"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="@dimen/padding_10"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/margin_5"
            android:text="@string/locknow"
            android:textColor="@color/white"
            android:textSize="@dimen/fontsize_12" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_10"
            android:src="@drawable/padlock" />
        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/margin_5"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tvSelectedAns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:background="@drawable/bg_yellow_radius"
            android:gravity="center"
            android:fontFamily="@font/montserrat_medium"
            android:paddingStart="@dimen/padding_10"
            android:paddingTop="@dimen/margin_5"
            android:paddingEnd="@dimen/padding_10"
            android:paddingBottom="@dimen/margin_5"
            android:text="0"
            android:textSize="@dimen/fontsize_10" />

        <TextView
            android:id="@+id/tvLockTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_5"
            android:fontFamily="@font/montserrat_medium"
            android:text="Locked at: 12:29:55s"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/fontsize_8" />
    </LinearLayout>

</LinearLayout>