<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.TicketSelectionActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/new_appbar"
        app:contentInsetEnd="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:clickable="true"
                android:contentDescription="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:padding="@dimen/padding_10"
                android:tint="@color/white"
                android:src="@drawable/ic_arrow" />

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/ivBack"
                android:fontFamily="@font/montserrat_semibold"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp"
                tools:ignore="MissingPrefix" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/_10sdp"
                android:fontFamily="@font/montserrat_semibold"
                android:lines="1"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Play Anytime"
                android:textColor="@color/white"
                android:textSize="20sp"
                tools:ignore="MissingPrefix" />

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:background="@color/darkblue"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="?attr/listPreferredItemHeightSmall"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin_10"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center"
            android:minWidth="@dimen/height_120"
            android:paddingStart="@dimen/padding_10"
            android:paddingEnd="@dimen/padding_10"
            android:text="Any Time Game : Number Slot"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="899 Tikcets sold!"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/fontsize_16"
                android:textStyle="bold"
                android:visibility="gone" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvBricks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_5"
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginEnd="@dimen/margin_5" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/slot_bg"
            >
            <TextView
                android:id="@+id/tv_RemainingText"
                android:layout_width="wrap_content"
                android:layout_height="?attr/listPreferredItemHeightSmall"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/montserrat_medium"
                android:gravity="center"
                android:background="@drawable/yellow_forground"
                android:minWidth="@dimen/height_120"
                android:paddingStart="@dimen/padding_10"
                android:paddingEnd="@dimen/padding_10"
                android:text="Blue-Red"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="@dimen/_18sdp" />
        </LinearLayout>



        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".fragments.AnyTimeGameFragment">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/tv_joinPrivateRoom"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:background="@drawable/bg_colorprimary"
                                android:gravity="center"
                                android:minHeight="@dimen/_30sdp"
                                android:paddingStart="@dimen/_10sdp"
                                android:paddingEnd="@dimen/_10sdp"
                                android:text="Compete in private group"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="gone" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginStart="@dimen/_5sdp"
                                android:layout_marginEnd="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_5sdp"
                                android:text="899 Tikcets sold!"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/fontsize_16"
                                android:textStyle="bold"
                                android:visibility="gone" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/padding_10"
                                android:text="Join All Contests"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/_10sdp"
                                android:visibility="visible" />

                            <CheckBox
                                android:id="@+id/chkall"
                                android:layout_width="@dimen/_30sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:layout_gravity="center"
                                android:button="@drawable/select_checkbox_drawable"
                                android:gravity="center"
                                android:padding="@dimen/margin_5"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/fontsize_14" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/bg_a0a0a0_stock_1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:padding="@dimen/margin_5">


                            <LinearLayout
                                android:id="@+id/lin_nine"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/_5sdp"
                                android:orientation="vertical"
                                tools:visibility="visible">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:orientation="horizontal">

                                    <LinearLayout
                                        android:id="@+id/lin_slot"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="@dimen/margin_10"
                                        android:layout_marginBottom="@dimen/margin_10"
                                        android:background="@drawable/bg_rounded_colorprimary_ticket"
                                        android:gravity="center"
                                        android:orientation="vertical">


                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <RadioGroup
                                                android:id="@+id/rdg_zero"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="@dimen/_5sdp"
                                                android:layout_marginBottom="@dimen/_5sdp"
                                                android:gravity="center"
                                                android:orientation="horizontal"
                                                android:padding="@dimen/_5sdp"
                                                android:weightSum="5">

                                                <RadioButton
                                                    android:id="@+id/rd_zero"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="0"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_one"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="1"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_two"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="2"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_three"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="3"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_four"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="4"
                                                    android:textColor="@color/black" />
                                            </RadioGroup>

                                        </LinearLayout>

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_gravity="center"
                                            android:gravity="center"
                                            android:orientation="horizontal">

                                            <RadioGroup
                                                android:id="@+id/rdg_five"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginBottom="@dimen/_5sdp"
                                                android:gravity="center"
                                                android:orientation="horizontal"

                                                android:padding="@dimen/_5sdp">

                                                <RadioButton
                                                    android:id="@+id/rd_five"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="5"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_six"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="6"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_seven"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="7"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_eight"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="8"
                                                    android:textColor="@color/black" />

                                                <RadioButton
                                                    android:id="@+id/rd_nine"
                                                    android:layout_width="wrap_content"
                                                    android:layout_height="@dimen/_40sdp"
                                                    android:layout_marginRight="@dimen/_5sdp"
                                                    android:layout_weight="1"
                                                    android:background="@drawable/price_group_sel"
                                                    android:button="@android:color/transparent"
                                                    android:clickable="false"
                                                    android:fontFamily="@font/montserrat_medium"
                                                    android:gravity="center"
                                                    android:minWidth="@dimen/_35sdp"
                                                    android:padding="@dimen/_10sdp"
                                                    android:text="9"
                                                    android:textColor="@color/black" />
                                            </RadioGroup>
                                        </LinearLayout>


                                    </LinearLayout>



                                </LinearLayout>


                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvSelected"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_semibold"
                        android:gravity="center"
                        android:padding="@dimen/padding_10"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontsize_16"
                        android:visibility="gone"
                        tools:text=" 00 Contest Selected" />

                    <LinearLayout
                        android:id="@+id/lin_data"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:ellipsize="end"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:maxLines="1"
                                android:text="Contest Fee"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_9sdp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:visibility="invisible"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Table Size"
                                    android:textColor="@color/color_424242"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Winnings"
                                    android:textColor="@color/color_424242"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:visibility="invisible"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/montserrat_medium"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Max winners"
                                    android:textColor="@color/color_424242"
                                    android:textSize="@dimen/_9sdp" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginBottom="@dimen/_3sdp"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/tvPlayAll"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:ellipsize="end"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:gravity="center"
                                    android:maxLines="1"
                                    android:text="Select All"
                                    android:textColor="@color/white"
                                    android:textSize="@dimen/_9sdp" />
                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <com.malinskiy.superrecyclerview.SuperRecyclerView
                        android:id="@+id/rvTicketSelection"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
                        app:recyclerClipToPadding="false"
                        app:recyclerPaddingBottom="@dimen/padding_10"
                        app:scrollbarStyle="insideOverlay" />

                    <LinearLayout
                        android:id="@+id/linearPay"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@drawable/my_gradient_drawable_round">

                        <TextView
                            android:id="@+id/tvPayTitle"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/montserrat_semibold"
                            android:gravity="center_horizontal"
                            android:padding="@dimen/padding_10"
                            android:text="Play"
                            android:textColor="@color/white"
                            android:textSize="@dimen/fontsize_18" />

                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </FrameLayout>


    </LinearLayout>

</RelativeLayout>