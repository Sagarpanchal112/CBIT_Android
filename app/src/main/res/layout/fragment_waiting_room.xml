<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.PackagesTabFragment"
    android:background="@color/white">

    <TextView
        android:id="@+id/tvAPDValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        tools:text="Average Play Per Day(APD) : " />

    <TextView
        android:id="@+id/DayOfJoin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:gravity="center"
        android:padding="@dimen/_3sdp"
        android:fontFamily="@font/montserrat_medium"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        tools:text="DayOfJoin " />
    <Button
        android:id="@+id/btnApplyDaily"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_35sdp"
        android:background="@drawable/btn_login_new"
        android:clickable="true"
        android:focusable="true"
        android:layout_margin="@dimen/_10sdp"
  android:fontFamily="@font/montserrat_semibold"      android:visibility="gone"
        android:text="Apply Daily Quota"
        android:textColor="@color/color_green_dark"
        android:textSize="@dimen/_12sdp"
        tools:ignore="MissingPrefix" />

    <com.malinskiy.superrecyclerview.SuperRecyclerView
        android:id="@+id/rvPackagesList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        app:mainLayoutId="@layout/layout_recyclerview_verticalscroll"
        app:recyclerClipToPadding="false"
        app:recyclerPaddingBottom="@dimen/padding_10"
        app:scrollbarStyle="insideInset"
        app:layout_empty="@layout/layout_no_data_found"/>

</LinearLayout>