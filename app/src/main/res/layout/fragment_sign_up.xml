<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".2"
        android:background="@color/color_green_dark">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:clickable="true"
            android:contentDescription="@null"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="@dimen/padding_10"
            android:src="@drawable/ic_arrow"
            android:tint="@color/white" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/margin_60"
            android:layout_marginEnd="@dimen/margin_60"
            android:contentDescription="@null"
            android:src="@drawable/new_logo" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".8"
        android:background="@drawable/bg_grdient_yellow"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/color_yellow"
            android:scaleType="fitXY" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/my_gradient_drawable">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_20"
                android:layout_marginEnd="@dimen/margin_20"
                android:clickable="true"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="@dimen/padding_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_semibold"
                    android:padding="@dimen/margin_5"
                    android:text="@string/welcometocbit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_18" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="@string/enterregisterdetail"
                    android:textColor="@color/white"
                    android:textSize="@dimen/fontsize_16" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_20"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edtFName"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeightSmall"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="@string/firstname"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/fontsize_18" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />

                        <EditText
                            android:id="@+id/edtMName"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeightSmall"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="@string/middlename"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:visibility="gone"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/fontsize_18" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />

                        <EditText
                            android:id="@+id/edtLName"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeightSmall"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="@string/surname"
                            android:imeOptions="actionNext"
                            android:inputType="textCapWords"
                            android:maxLines="1"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/fontsize_18" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />

                        <EditText
                            android:id="@+id/edtEmail"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeightSmall"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="@string/email"
                            android:imeOptions="actionNext"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/fontsize_18" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />

                        <LinearLayout
                            android:id="@+id/lin_state"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="@drawable/edittext_line"
                            android:orientation="horizontal"
                            android:padding="@dimen/margin_5">

                            <Spinner
                                android:id="@+id/spn_state"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/arrow" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />

                        <LinearLayout
                            android:id="@+id/lin_city"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/actionBarSize"
                            android:background="@drawable/edittext_line"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:padding="@dimen/margin_5">

                            <Spinner
                                android:id="@+id/spn_city"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/white" />

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:src="@drawable/arrow" />
                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:visibility="gone"
                            android:background="@color/color_8f7422" />

                        <EditText
                            android:id="@+id/edtUserName"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeightSmall"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="@string/username"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/fontsize_18" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />

                        <EditText
                            android:id="@+id/edtPassword"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeightSmall"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="@string/password"
                            android:imeOptions="actionNext"
                            android:inputType="textPassword"
                            android:maxLines="1"
                            android:padding="@dimen/padding_10"
                            android:text="12345678"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/fontsize_18"
                            android:visibility="gone" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="@dimen/height_70"
                                android:layout_height="?attr/listPreferredItemHeightSmall"
                                android:background="@null"
                                android:clickable="true"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:fontFamily="@font/montserrat_medium"
                                android:gravity="center"
                                android:padding="@dimen/padding_10"
                                android:text="+91"
                                android:textColor="@color/black"
                                android:textSize="@dimen/fontsize_18" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:background="@color/color_8f7422" />

                            <EditText
                                android:id="@+id/edtMobile"
                                android:layout_width="match_parent"
                                android:layout_height="?attr/listPreferredItemHeightSmall"
                                android:background="@null"
                                android:fontFamily="@font/montserrat_medium"
                                android:hint="@string/mobile"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:maxLength="10"
                                android:maxLines="1"
                                android:padding="@dimen/padding_10"
                                android:textColor="@color/black"
                                android:textColorHint="@color/text_hint"
                                android:textSize="@dimen/fontsize_18" />
                        </LinearLayout>
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/color_8f7422" />
                        <EditText
                            android:id="@+id/edtReferralCode"
                            android:layout_width="match_parent"
                            android:layout_height="?attr/listPreferredItemHeightSmall"
                            android:background="@null"
                            android:fontFamily="@font/montserrat_medium"
                            android:hint="You Have Referral Code?"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:maxLines="1"
                            android:padding="@dimen/padding_10"
                            android:textColor="@color/black"
                            android:textColorHint="@color/text_hint"
                            android:textSize="@dimen/fontsize_18" />


                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_5">

                    <CheckBox
                        android:id="@+id/chkAgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_yellow" />

                    <TextView
                        android:id="@+id/tvAgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="I agree to the Terms&amp;Conditions and Privacy Policy"
                        android:textColor="@color/white"
                        android:textColorLink="@color/white"
                        android:textSize="@dimen/fontsize_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin_5">

                    <CheckBox
                        android:id="@+id/chkAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_yellow" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="I am 18 years and above"
                        android:textColor="@color/white"
                        android:textColorLink="@color/white"
                        android:textSize="@dimen/fontsize_16" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:padding="@dimen/margin_5">

                    <CheckBox
                        android:id="@+id/chkState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/color_yellow" />

                    <TextView
                        android:id="@+id/tvState"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="I am not a resident of Assam / orrisa / Nagaland / Telangana / Sikkim / Andhra Pradesh / Tamil nadu"
                        android:textColor="@color/white"
                        android:textColorLink="@color/white"
                        android:textSize="@dimen/fontsize_16" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnRegister"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/listPreferredItemHeightSmall"
                    android:layout_marginTop="@dimen/padding_16"
                    android:background="@drawable/btn_login_new"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/montserrat_semibold"
                    android:foreground="?attr/selectableItemBackground"
                    android:text="@string/signup"
                    android:textColor="@color/color_green_dark"
                    android:textSize="@dimen/fontsize_20" />

                <LinearLayout
                    android:id="@+id/linearLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:background="?attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="horizontal"
                    android:padding="@dimen/padding_10">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="@string/alreadyhaveanaccount"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontsize_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_5"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/login_bold_underline"
                        android:textColor="@color/color_yellow"
                        android:textSize="@dimen/fontsize_16" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


</LinearLayout>