<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <EditText
        android:id="@+id/edtTicketPrice"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:textColor="@color/color_424242"
        android:textSize="@dimen/_14sdp"
        android:hint="@string/ticketprice"
        android:textColorHint="@color/color_424242"
        android:fontFamily="@font/montserrat_medium"
        android:padding="@dimen/padding_10"
        android:inputType="numberDecimal"
        android:imeOptions="actionDone"
        android:maxLines="1"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20"/>

    <LinearLayout
        android:id="@+id/linearBracketSize"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@drawable/edittext_line"
        android:padding="@dimen/padding_10"
        android:layout_marginTop="@dimen/margin_10"
        android:layout_marginStart="@dimen/margin_20"
        android:layout_marginEnd="@dimen/margin_20">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/bracketsize1"
            android:textSize="@dimen/_14sdp"
            android:fontFamily="@font/montserrat_medium"
            android:gravity="center_vertical"
            android:textColor="@color/color_424242"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinnerBracketSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:spinnerMode="dialog"
            android:background="@color/white"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow"
            android:layout_gravity="center"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_b3b3bb"
        android:layout_marginTop="@dimen/padding_10"/>
</LinearLayout>