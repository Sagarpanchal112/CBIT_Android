<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_15sdp"
        android:background="@drawable/bg_a0a0a0_stock_1"
        android:orientation="vertical"
        android:padding="@dimen/margin_5"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:text="Entry Fees"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_9sdp" />

                    <TextView
                        android:id="@+id/tvEntryFees"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:text="₹ 5"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:maxLines="1"
                            android:text="Players"
                            android:textColor="@color/color_424242"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalTicket"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:maxLines="1"
                        android:text="500"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:fontFamily="@font/montserrat_medium"
                            android:maxLines="1"
                            android:text="Winnings"
                            android:textColor="@color/color_424242"
                            android:textSize="@dimen/_9sdp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvTotalWinnings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="₹ 2000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:fontFamily="@font/montserrat_medium"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Max winners"
                            android:textColor="@color/color_424242"
                            android:textSize="@dimen/_9sdp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMaxWinners"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:fontFamily="@font/montserrat_medium"
                        android:text="3000"
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/_10sdp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat_medium"
                        android:ellipsize="end"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="20 Played/80 Pending"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:maxLines="1"
                        android:text="Lock Style"
                        android:fontFamily="@font/montserrat_medium"
                        android:textColor="@color/color_424242"
                        android:textSize="@dimen/_9sdp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <CheckBox
                        android:id="@+id/chkSelect"
                        android:layout_width="@dimen/height_40"
                        android:layout_height="@dimen/height_40"
                        android:layout_gravity="center"
                        android:fontFamily="@font/montserrat_medium"
                        android:button="@drawable/select_checkbox_drawable"
                        android:padding="@dimen/margin_5"
                        android:text=""
                        android:textColor="@color/colorPrimary"
                        android:textSize="@dimen/fontsize_14" />

                    <TextView
                        android:id="@+id/tvPlayNow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/margin_5"
                        android:background="@drawable/bg_colorprimary"
                        android:fontFamily="@font/montserrat_medium"
                        android:gravity="center"
                        android:paddingStart="@dimen/padding_10"
                        android:paddingTop="@dimen/margin_5"
                        android:paddingEnd="@dimen/padding_10"
                        android:paddingBottom="@dimen/margin_5"
                        android:text="Play Now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fontsize_12" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>